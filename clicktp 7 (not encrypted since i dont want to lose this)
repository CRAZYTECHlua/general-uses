    spectators = {}
    for _, plr in pairs(Players:GetPlayers()) do
        table.insert(spectators, plr.Name)
    end
end

-- Initial refresh
refreshSpectators()

Players.PlayerAdded:Connect(function(newPlayer)
    refreshSpectators()
end)

Players.PlayerRemoving:Connect(function(leavingPlayer)
    refreshSpectators()
